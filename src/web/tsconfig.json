{
  "compilerOptions": {
    // ECMAScript Target and Module Configuration
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "bundler",
    
    // JavaScript Support
    "allowJs": true,
    "skipLibCheck": true,
    
    // Module Resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    
    // Emit Configuration
    "noEmit": true,
    
    // React Configuration
    "jsx": "react-jsx",
    
    // Type Checking
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    
    // Project Structure
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@hooks/*": ["src/hooks/*"],
      "@store/*": ["src/store/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@config/*": ["src/config/*"],
      "@interfaces/*": ["src/interfaces/*"]
    },
    
    // Type Definitions
    "types": [
      "vite/client",
      "jest",
      "@testing-library/jest-dom"
    ]
  },
  
  // Project Files
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "vite.config.ts"
  ],
  
  // Excluded Files and Directories
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage"
  ],
  
  // Project References
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}